//convertir de libras a kilogramos

let libras = 160;
let kg = libras / 2.2046;

//Para redondear
kg = Math.round(kg);

console.log(kg);



//convertir de km a millas,sabiendo que:
//1 km = 0.62

let km = 20;

let mi = km * 0.62 ;

console.log(mi);


